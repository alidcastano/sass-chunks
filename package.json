{
  "name": "sass-chunks",
  "version": "0.0.1",
  "description": "A declarative Sass library for delivering semantic, concise, and maintainable stylesheets",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && npm run build:sass && npm run build:autoprefix",
    "build:sass": "node-sass --output-style expanded --source-map true src/main.sass dist/main.css",
    "build:autoprefix": "postcss --use autoprefixer --output dist/main.css dist/main.css"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "node-sass": "^4.5.0",
    "postcss-cli": "^2.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alidcastano/sass-chunks.git"
  },
  "keywords": [
    "sass",
    "mixins",
    "declarative"
  ],
  "author": "Alid Castano",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alidcastano/sass-chunks/issues"
  },
  "homepage": "https://github.com/alidcastano/sass-chunks#readme"
}
